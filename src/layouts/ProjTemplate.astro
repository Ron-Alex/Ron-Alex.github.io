<style>
:root{
	--bg: #000000;
	--card: rgba(255,255,255,0.03);
	--muted: rgba(255,255,255,0.6);
	--text: #ffffff;
	--accent: #60a5fa; /* sky-400 */
	--accent-2: #7c3aed; /* purple */
}

html, body {
	background: var(--bg);
	color: var(--text);
	min-width: 320px;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

/* Central article card */
.markdown-card {
	max-width: 880px;
	margin: 3rem auto;
	background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
	color: var(--text);
	border-radius: 14px;
	padding: 2.5rem 2.25rem;
	box-shadow: 0 8px 30px rgba(2,6,23,0.6);
	border: 1px solid rgba(255,255,255,0.04);
}

/* Post header */
.markdown-card .post-header{margin-bottom:1.25rem}
.markdown-card h1{
	font-size: clamp(1.6rem, 3.2vw, 2.4rem);
	line-height: 1.05;
	margin: 0 0 0.4rem 0;
	font-weight: 700;
	letter-spacing: -0.02em;
}

.markdown-card .post-meta{
	color: var(--muted);
	font-size: 0.95rem;
	display:flex;
	gap:0.75rem;
	align-items:center;
}

.markdown-card .tags{display:flex;gap:0.5rem;flex-wrap:wrap}
.markdown-card .tag{background:rgba(255,255,255,0.03);color:var(--muted);padding:0.25rem 0.5rem;border-radius:999px;font-size:0.85rem}

/* Featured image */
.markdown-card .featured-image{width:100%;border-radius:10px;overflow:hidden;margin:1rem 0}
.markdown-card .featured-image img{display:block;width:100%;height:auto}

/* Main content (prose) */
.markdown-card .post-content{font-size:1.05rem;line-height:1.75;color:var(--text)}
.markdown-card p{margin:0 0 1rem 0}

.markdown-card h2{font-size:1.35rem;margin-top:1.6rem;margin-bottom:0.6rem;font-weight:600}
.markdown-card h3{font-size:1.15rem;margin-top:1.2rem;margin-bottom:0.5rem}

/* Links */
.markdown-card a{color:var(--accent);text-decoration:underline;transition:color .15s ease}
.markdown-card a:hover{color:var(--accent-2)}

/* Inline code */
.markdown-card code{background:rgba(255,255,255,0.03);padding:0.2rem 0.45rem;border-radius:6px;font-family:ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;font-size:0.95em;color:var(--accent)}

/* Code blocks */
.markdown-card pre{background:#071022;color:#e6eef8;padding:1rem;border-radius:8px;overflow:auto;font-family:ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;font-size:0.95rem;margin:1rem 0}

/* Blockquote */
.markdown-card blockquote{border-left:3px solid rgba(255,255,255,0.06);padding:0.6rem 1rem;background:rgba(255,255,255,0.01);color:var(--muted);margin:1rem 0;border-radius:6px}

/* Lists */
.markdown-card ul,.markdown-card ol{margin:0.75rem 0 1rem 1.25rem}
.markdown-card li{margin-bottom:0.45rem}

/* Horizontal rule */
.markdown-card hr{border:none;border-top:1px solid rgba(255,255,255,0.04);margin:1.5rem 0}

/* Tables */
.markdown-card table{width:100%;border-collapse:collapse;margin:1rem 0}
.markdown-card th,.markdown-card td{border:1px solid rgba(255,255,255,0.04);padding:0.55rem 0.75rem;text-align:left;font-size:0.95rem}
.markdown-card th{background:rgba(255,255,255,0.02)}

/* Responsive adjustments */
@media (max-width:720px){
	.markdown-card{padding:1.5rem 1rem;margin:1.5rem}
	.markdown-card h1{font-size:1.4rem}
}

/* Small helper utilities (author avatar + meta) */
.meta-avatar{width:36px;height:36px;border-radius:999px;overflow:hidden;display:inline-block;margin-right:0.6rem}
.meta-avatar img{width:100%;height:100%;object-fit:cover}

/* subtle drop caps for first paragraph (optional) */
.post-content p:first-of-type::first-letter{float:left;font-size:3rem;line-height:1;margin-right:0.35rem;color:var(--accent);font-weight:700}

