---
import '../styles/global.css';
import { ChevronsDown } from '@lucide/astro';
---

<div id="mainContainer" class="dark:bg-black dark:text-white min-h-screen flex flex-col">
    <main>
        <div id="hero">
            <div id="heroTitle" class="text-4xl font-bold">
                <h1>I'm Ron,</h1>
                <h2>and I'm a Software Engineer</h2>
            </div>
        </div>
    </main>
    <div id="heroInfo" class="grid grid-cols-3 gap-8 p-8">
        <div id="heroLocation">
            <h3>Location</h3>
            <p>Houston</p>
        </div>
        <div id="heroStatus">
            <h3>Status</h3>
            <p>Student</p>
        </div>
        <div id="heroLinks">
            <div id="linkedin">
                <a href="https://www.linkedin.com/in/ron-alex/" target="_blank" rel="noopener noreferrer">
                    <h3>LinkedIn</h3>
                </a>
            </div>
            <div id="github">
                <a href="https://github.com/ron-alex" target="_blank" rel="noopener noreferrer">
                    <h3>GitHub</h3>
                </a>
            </div>
        </div>
        <div id="readMore">
            <h3>Read More</h3>
            <ChevronsDown size="24" />
        </div>
    </div>
</div>

<style>

    @import url('https://fonts.googleapis.com/css2?family=Bitcount+Grid+Single:wght@100..900&family=Karla:ital,wght@0,200..800;1,200..800&family=Roboto+Slab:wght@100..900&display=swap');
    main {
        flex: 1;
        height: 100%;
        display: flex;
        justify-content: left;
        align-items: end;
        padding: 2rem;
    }

    #heroTitle{
        font-family: "Roboto Slab", serif;
    }

    #heroTitle h1{
        font-weight: 300;
        font-size: 5rem;
    }

    #heroTitle h2{
        font-weight: 200;
        font-size: 3rem;
    }

    #heroInfo {
        font-family: "Bitcount Grid Single", system-ui;
        font-optical-sizing: auto;
        display: grid;
        grid-template-columns: 1fr;
    }

    #heroLinks{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    /* * 2. Medium Screens (e.g., 640px and up)
    * "linkedin and github link drop to a row below"
    * We switch to a 3-column grid.
    * - Row 1: Location, Status, LinkedIn
    * - Row 2: GitHub, Read More
    */
    @media (min-width: 640px) {
        #heroInfo {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* * 3. Large Screens (e.g., 1024px and up)
    * "in a single row"
    * This is your original 5-column layout, which overrides the 3-column grid.
    */
    @media (min-width: 1024px) {
        #heroInfo {
            grid-template-columns: auto auto auto 1fr;
        }
    }

    #linkedin, #github{
        display: inline flex;
        align-items: center;
    }

    #readMore{
        display: inline flex; 
        place-self: end;
        align-items: center;
    }

    #heroInfo h3{
        font-weight: 400;
        font-size: 1.5rem;
        margin-bottom: 0.25rem;
    }

</style>