---
interface Props {
    title: string;
    stack: string[];
    img: string;
    date?: string;
    projDescription?: string;
}

const {title} = Astro.props;
const {stack} = Astro.props;
const {img} = Astro.props;
const {date} = Astro.props;
const {projDescription} = Astro.props;

---

<div id="indivProj" class="dark:bg-black dark:text-white flex flex-row p-8 border border-solid border-white rounded-lg">
    <div id="projContent1" class="gap-4">
        <div id="indivProjTitle">
            <h2 class="text-lg lg:text-3xl font-semibold">{title}</h2>
        </div>
        <div>
            <h3 class="text-xl font-medium mb-2">{projDescription}</h3>
        </div>
        <div id="projStack">
            <h3 class="text-xl font-medium mb-2">Tech Stack</h3>
            <ul class="list-disc list-inside">
                {stack.map(tech => (
                    <li>{tech}</li>
                ))}
            </ul>
        </div>
    </div>
    <div id="projImage" class="rounded-lg border border-solid border-white">
        <img src={img} alt={`${title} screenshot`} class=" border rounded-lg"/>
    </div>
    <div>
        <h2 class="text-lg text-gray-500 italic">{date}</h2>
    </div>
</div>

<style>
    #indivProj {
    display: grid;
    grid-template-columns: 1.5fr 3fr 0.5fr; /* left: text, right: image */
    align-items: start;
    gap: 1.5rem;
    font-family: "Karla", system-ui;
    font-optical-sizing: auto;
}

    #projImage img {
        max-width: 100%;
        height: auto;
    }

    /* Title hover: smoothly italicize via transform (font-style isn't animatable) */   
    #indivProjTitle h2 {
        display: inline-block;
        transform: skewX(1deg);
        transition: transform  1s ease, color 0.5s ease;
        /* transform-origin: left center;
        will-change: transform; */
    }

    /* Apply on card hover — skew to simulate italic plus set font-style for accuracy */
    #indivProj:hover #indivProjTitle h2 {
        transform: skewX(-15deg);
        font-style: italic;
        color: #60a5fa; /* accent color when hovered — adjust if you prefer */
    }

</style>