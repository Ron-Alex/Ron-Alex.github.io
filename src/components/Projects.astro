---
import ProjComp from '../components/ProjComp.astro'

---

<div id="projectSection" class="dark:bg-black dark:text-white min-h-screen flex flex-col p-8">
    <div id="projectTitle">
        <h2 class="text-3xl font-semibold mb-4">Projects</h2>
    </div>

    <div id="projectsList" class="grid grid-cols-1 gap-6">
        <h2 class="italic font-light">UNDER CONSTRUCTION</h2>
        <a href='/projects/portfolio/'>
            <div>
                 <ProjComp title="Portfolio Website" projDescription='Portfolio Project' stack={['Astro', 'Tailwind CSS', 'GitHub Actions']} img="/assets/portfolio/portfolio.png" date='Ongoing'/>
            </div>
        </a>
        <a href='/projects/coogmusic/'>
            <div>
                <ProjComp title="CoogMusic" stack={['React', 'TypeScript', 'Express', 'PostgreSQL']} img="/assets/coogmusic/coogmusic.png" date='November 2025'/>
            </div>
        </a>
    </div>


</div>